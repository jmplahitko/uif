{
	"name": "ui-framework",
	"version": "3.0.0",
	"description": "A headless framework for SPAs",
	"main": "index.js",
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"eslint": "^8.6.0",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-plugin-import": "^2.25.4",
		"jest": "^27.4.7",
		"ts-jest": "^27.1.2",
		"typescript": "^4.5.4",
		"vite": "^2.8.2"
	},
	"publishConfig": {
		"registry": "https://registry.ai.org/repository/npm-hosted/"
	},
	"scripts": {
		"watch": "esbuild src/ui-framework.ts --bundle --format=esm --outfile=dist/ui-framework.js --watch",
		"build": "rm -rf ./dist && npm run build:types && npm run build:esm",
		"build:types": "tsc -p tsconfig.build.json",
		"build:esm": "esbuild src/ui-framework.ts --bundle --minify --format=esm --sourcemap --outfile=dist/ui-framework.esm.js",
		"test": "npm run test:eslint && npm run test:jest",
		"test:eslint": "eslint . --ext .ts",
		"test:jest": "jest --no-watchman"
	}
}
